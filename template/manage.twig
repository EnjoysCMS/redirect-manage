{% extends "@a/layout.twig" %}

{% block scripts %}
{% endblock %}

{% block content %}

    <section class="content">


        <div class="card">
            <div class="card-header">
                <h3 class="card-title">{{ title }}</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <a href="{{ path('redirects/add') }}">Добавить</a>
                <ul>
                    {% for redirect in redirects %}
                        <li class="my-3">
                            <div>Pattern: <span class="font-weight-bolder">{{ redirect.pattern }}  </span></div>
                            <div>Replacement: <code>{{ redirect.replacement }}</code></div>
                            <div>Include query: <span class="font-weight-bolder">{{ redirect.inclQuery is same as (true) ? 'Да' : 'Нет' }}</span></div>
                            <div>Permanent: <span class="font-weight-bolder">{{ redirect.permanent is same as (true) ? 'Да' : 'Нет' }}</span></div>
                            <div>
                                <a href="{{ path('redirects/edit', {"id": redirect.id}) }}">редактировать</a>
                                <a href="{{ path('redirects/delete', {"id": redirect.id}) }}">удалить</a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>


{% endblock %}
